<script type="text/javascript">
  var a=function(){
  $("#arrowLeft").hover(function(){
    $(this).css({'stroke':'#555','stroke-width':'2'})
    },
  function(){
    $(this).css({'stroke':'#7f4','stroke-width':'2'})
  })
  .on('click',function(){
    $("#backSide").removeClass('turnLeft')
    .addClass('turn')
    $("#frontSide").removeClass('turnRight');
  });
  $("#arrowRight").hover(function(){
    $(this).css({'stroke':'#555','stroke-width':'2'})
    },
  function(){
    $(this).css({'stroke':'#7f4','stroke-width':'2'})
  })
  .on('click',function(){
    $("#backSide").removeClass('turn')
    .addClass('turnLeft')
    $("#frontSide").addClass('turnRight');
  });
}
a();
</script>
</body>
</html>
